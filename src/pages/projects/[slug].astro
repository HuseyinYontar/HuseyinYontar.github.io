---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<BaseLayout title={`${project.data.title} | Huseyin Yontar`} description={project.data.description}>
  <article class="project-page">
    <header class="project-header">
      <a href="/projects" class="back-link">← Back to Projects</a>
      <h1>{project.data.title}</h1>
      <p class="project-description">{project.data.description}</p>
      
      <div class="project-meta">
        {project.data.technologies && (
          <div class="card-tags">
            {project.data.technologies.map((tech: string) => (
              <span class="tag">{tech}</span>
            ))}
          </div>
        )}
        
        <div class="project-links">
          {project.data.github && (
            <a href={project.data.github} target="_blank" rel="noopener noreferrer" class="btn btn-outline">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              View Source
            </a>
          )}
          {project.data.live && (
            <a href={project.data.live} target="_blank" rel="noopener noreferrer" class="btn btn-primary">
              Live Demo →
            </a>
          )}
        </div>
      </div>
    </header>

    {project.data.image && (
      <img src={project.data.image} alt={project.data.title} class="project-image" />
    )}

    <div class="project-content prose">
      <Content />
    </div>
  </article>
</BaseLayout>

<style>
  .project-page {
    max-width: 100%;
  }

  .back-link {
    display: inline-block;
    margin-bottom: var(--spacing-lg);
    font-size: 0.9rem;
  }

  .project-header {
    margin-bottom: var(--spacing-xl);
  }

  .project-description {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-lg);
  }

  .project-meta {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap: var(--spacing-md);
  }

  .project-links {
    display: flex;
    gap: var(--spacing-sm);
  }

  .project-image {
    width: 100%;
    border-radius: 12px;
    margin-bottom: var(--spacing-xl);
    box-shadow: var(--shadow-md);
  }

  .project-content {
    line-height: 1.8;
  }

  .project-content :global(h2) {
    margin-top: var(--spacing-xl);
  }

  .project-content :global(img) {
    margin: var(--spacing-lg) 0;
  }

  @media (max-width: 768px) {
    .project-meta {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
